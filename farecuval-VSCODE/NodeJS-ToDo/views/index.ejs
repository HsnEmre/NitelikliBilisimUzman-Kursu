<!doctype html>
<html lang="en">

<head>
  <title>ToDo APP</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body>
 
  <main>
<div class="container">
<div class="row col-6">
    <h1>Bugün : <%= new Date().toLocaleDateString()%>    </h1>

</div>

<div class="row col-6">

<div class="container">
    <form method="post">
        <div class="mb-3 row">
            <label for="inputName" class="col-4 col-form-label">Başlık</label>
            <div class="col-8">
                <input type="text" class="form-control" name="baslik" id="inputName" placeholder="Başlık giriniz">
            </div>
        </div>

        <div class="mb-3 row">
            <label for="inputName" class="col-4 col-form-label">Açıklama</label>
            <div class="col-8">
                <input type="text" class="form-control" name="aciklama" id="inputName" placeholder="Açıklama giriniz">
            </div>
        </div>
       
        <div class="mb-3 row">
            <div class="offset-sm-4 col-sm-8">
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
        </div>
    </form>

    <div class="row">
      <% for(var t of Model.ToDos) {%>
      <div class="col-4">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title"><%=t.baslik%></h3>
            <p class="card-text"><%=t.aciklama%></p>
            <a href="?islem=sil&id=<%=t.id %>" class ="btn btn-danger"> Sil</a>
          </div>
        </div>
      </div>

      <% } %>
    </div>
</div>
</div>

</div>
   






  </main>
  
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>


