<%- include("header") %>
  <main>
    <div class="container">
        <form method="post">
            <div class="mb-3 row">
                <label for="inputName" class="col-4 col-form-label">Başlık</label>
                <div class="col-8">
                    <input type="text" class="form-control" name="txtBaslik" id="txtBaslik" placeholder="Başlık giriniz">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="inputName" class="col-4 col-form-label">İçerik</label>
                <div class="col-8">
                    <textarea class="form-control" name="txtIcerik" id="txtIcerik" placeholder="İçerik giriniz"></textarea>
                </div>
            </div>
          <div class="alert alert-danger alert-dismissible fade" id="divUyari" role="alert">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong>Hata</strong> Lütfen tüm alanları doldurunuz
          </div>
          
          <script>
            var alertList = document.querySelectorAll('.alert');
            alertList.forEach(function (alert) {
              new bootstrap.Alert(alert)
            })
          </script>
          
            <div class="mb-3 row">
                <div class="offset-sm-4 col-sm-8">
                    <button type="submit" onclick="return dogrula()" class="btn btn-primary">Gönder</button>
                </div>
            </div>
        </form>
    </div>
  </main>
  <script type="text/javascript">

function dogrula()
{
 var txtBaslik = document.getElementById("txtBaslik").value;
 var txtIcerik = document.getElementById("txtIcerik").value;

 if(txtBaslik.length>5 && txtIcerik.length>5)
 {

    return true;
 }
 else
 {
    document.getElementById("divUyari").classList.add("show");
    return false;
 }

}

    
  </script>
  <%- include("footer") %>
 
   


